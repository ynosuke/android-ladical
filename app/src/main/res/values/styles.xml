<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:style/Theme.Holo.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <style name="dropshadow">
        <item name="android:shadowColor">#888888</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">1</item>
    </style>
    
    <style name="title">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="weekTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="detailMark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:src">@mipmap/blank</item>
    </style>
    
    <style name="detailTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="numberButton" >
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:padding">10dip</item>
        <item name="android:background">@drawable/number_key_selector</item>
	</style>
	
    <style name="numberButtonDark" parent="numberButton">
        <item name="android:background">@drawable/number_key_selector_dark</item>
	</style>

</resources>